<!--index.wxml-->
<view class="page-container">
  <view class="page-content">
    <view class="logo-container">
      <image src="/images/R-C.jpg"></image>
    </view>
    <view class="form-item">
      <input type="text" class="form-item-input" placeholder="请输入快递单号" placeholder-class="form-item-input_placeholder" bindinput="handleChange"/>
    </view>
    <view class="form-item">
      <button class="form-item-btn" hover-class="form-item-btn_hover" style="width: 630rpx;height: 44px;" bindtap="handleSubmit">提交</button>
    </view>
    <view class="form-item">
      <button class="form-item-btn" hover-class="form-item-btn_hover" style="width: 630rpx;height: 44px;" bindtap="handleScancode">点击扫快递条形码</button>
    </view>
  </view>
</view>